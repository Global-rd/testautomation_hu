{
  "compilerOptions": {
    "target": "ES2022",
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "types": [
      "node",
      "@playwright/test"
    ],
    "resolveJsonModule": true
  },
  "include": [
    "src",
    "tests",
    "playwright.config.ts"
  ]
}
