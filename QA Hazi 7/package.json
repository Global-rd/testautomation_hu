  "main": "index.js",
  "scripts": {
    "clean:reports": "rimraf cypress/reports",
    "test": "npm run clean:reports && cypress run --reporter mochawesome --reporter-options reportDir=cypress/reports,overwrite=false,html=false,json=true",
    "merge:json": "npx mochawesome-merge \"cypress/reports/mochawesome*.json\" --output cypress/reports/tmp.json",
    "generate:html": "npx marge cypress/reports/tmp.json --reportDir cypress/reports --reportFilename mochawesome",
    "report": "npm run merge:json && npm run generate:html ",
    "open": "cypress open"
  },
